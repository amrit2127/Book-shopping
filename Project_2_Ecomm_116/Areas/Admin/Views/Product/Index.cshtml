<div class="row">
    <div class="col-8">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-4">
        <a asp-action="Upsert" class="btn btn-info form-control">
            <i class="fas fa-plus"></i>&nbsp;  New Product
        </a>
    </div>
</div>

<div class="container rounded border p-2 m-2">
    <table id="tblData" class="table table-bordered table-hover table-striped table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}