<div class="row">
    <div class="col-9">
        <h2 class="text-primary">Company List</h2>
    </div>
</div>

<div class="col-3">
    <a asp-action="Upsert" class="btn btn-info">
        <i class="fas fa-plus"></i>&nbsp; New Company
    </a>
</div>

<div class="container rounded border p-3 m-3">
    <table id="tblData" class="table table-bordered table-active table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>Is Authorized</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/company.js"></script>

}