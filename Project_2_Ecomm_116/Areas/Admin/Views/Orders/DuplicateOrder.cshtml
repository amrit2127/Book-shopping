@model IEnumerable<OrderHeader>

<h1>Orders List</h1>

<table class="table" id="ordersTable">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Order Total</th>
            <th>Order Status</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate</td>
                <td>@order.OrderTotal</td>
                <td>@order.OrderStatus</td>
                <td>@order.PhoneNumber</td>
                <td>
                    <form asp-controller="Orders" asp-action="DuplicateOrder" method="post">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-primary">Duplicate Order</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

